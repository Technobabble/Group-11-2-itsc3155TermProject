<table>
  <tr>
    <th>Name</th>
    <th>Gender</th>
    <th>Race</th>
    <th>Class</th>
    <th>Story</th>
    <th colspan="3">Actions</th>
  </tr>
 
  <% @characters.each do |character| %>
    <tr>
      <td><%= character.name %></td>
      <td><%= character.gender %></td>
      <td><%= character.race %></td>
      <td><%= character.charclass %></td>
      <td><%= character.story %></td>
      <td><%= link_to 'Show', character_path(character) %></td>
      <td><%= link_to 'Edit', edit_character_path(character) %></td>
      <td><%= link_to 'Delete',
                  character_path(character),
                  method: :delete,
                  data: { confirm: 'Delete character?' } %></td>
    </tr>
  <% end %>
</table>

<h4 class="label"><%= link_to 'New Character |', new_character_path %>
