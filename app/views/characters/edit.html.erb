<center><h1>Edit Character</h1>
<%= form_for :character, url: character_path(@character), method: :patch do |f| %>
  <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>
    
    <p>
        <%= f.label :gender %><br
        >
        <%= f.text_field :gender %>
    </p>
    
    <p>
        <%= f.label :race %><br>
        <%= f.text_field :race %>
    </p>
    
    <p>
        <%= f.label :class %><br>
        <%= f.text_field :charclass %>
    </p>
    
    <p>
        <%= f.label :story %><br>
        <%= f.text_area :story %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', characters_path %></center>