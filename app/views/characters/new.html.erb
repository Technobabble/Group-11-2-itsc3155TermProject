<center><br><br><br><img src="https://i.imgur.com/wbbVGlF.png" alt ="New Character"</br></br></br>
<%= form_for :character, url: characters_path do |f| %>
<font color="#58F26C">
    <% if @character.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@character.errors.count, "error") %> prevented
        this character from being created:
      </h2>
      <ul>
        <% @character.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>
    
    <p>
        <%= f.label :gender %><br>
        <%= f.text_field :gender %>
    </p>
    
    <p>
        <%= f.label :race %><br>
        <%= f.text_field :race %>
    </p>
    
    <p>
        <%= f.label :class %><br>
        <%= f.text_field :charclass %>
    </p>
    
    <p>
        <%= f.label :story %><br>
        <%= f.text_area :story %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
</font>
<% end %>
<%= link_to 'Back', characters_path %></center>