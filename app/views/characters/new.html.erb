<center><br><br><br><img src="https://i.imgur.com/wbbVGlF.png" alt ="New Character"</br></br></br>
<%= form_for :character, url: characters_path do |f| %>
    <p>
        <h4 id="label">
        <%= f.label :name %>
        </h4>
        <%= f.text_field :name %>
    </p>
    
    <p>
        <h4 id="label">
        <%= f.label :gender %>
        </h4>
        <%= f.text_field :gender %>
    </p>
    
    <p>
        <h4 id="label">
        <%= f.label :race %>
        </h4>
        <%= f.text_field :race %>
    </p>
    
    <p>
        <h4 id="label">
        <%= f.label :class %>
        </h4>
        <%= f.text_field :charclass %>
    </p>
    
    <p>
        <h4 id="label">
        <%= f.label :story %>
        </h4>
        <%= f.text_area :story %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', characters_path %></center>