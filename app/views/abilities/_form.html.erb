<%= form_for([@character, @character.abilities.build]) do |f| %>
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>
    
    <p>
        <%= f.label :damage_type %><br>
        <%= f.text_field :damage_type %>
    </p>
    
    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<% end %>