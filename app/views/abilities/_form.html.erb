<%= form_for([@character, @character.abilities.build]) do |f| %>
    <p>
        <h4 class="label">
        <%= f.label :name %>
        </h4>
        <%= f.text_field :name %>
    </p>
    
    <p>
        <h4 class="label">
        <%= f.label :damage_type %><br>
        </h4>
        <%= f.text_field :damage_type %>
    </p>
    
    <p>
        <h4 class="label">
        <%= f.label :description %><br>
        </h4>
        <%= f.text_area :description %>
    </p>
    
    <p>
        <%= f.submit "Add ability" %>
    </p>
<% end %>